    <script>
        //退出
        function LoginOut() {
            layer.confirm("确定退出吗?", {
                icon: "fa-exclamation-circle",
                title: "温馨提示",
                btn: ['确认', '取消'],
                btnclass: ['btn btn-primary', 'btn btn-danger'],
            }, function () {

                //后台管理系统地址
                var sysMgmt_url = '@System.Configuration.ConfigurationManager.AppSettings["SysMgmt"].ToString()';
                var url = sysMgmt_url + "Handle/SessionStateHandler.ashx?op=1"
                    + "&systemCode=" + 'SystemCode-@System.Configuration.ConfigurationManager.AppSettings["SystemCode"].ToString()'
            + "&operationCode=128" + "&pageCode=EMPIMS.LoginOut"
            + "&userId=" + '@ViewBag.UserID';
                $.ajax({
                    type: 'get',
                    dataType: "text",
                    url: url,
                    cache: false,
                    async: false,
                    success: function (data) {
                        if (data == "success") {
                            //跳转到登录页面
                            location.href = "../Login/Index";
                        }
                    },
                    error: function (data) {

                    }
                });
            });
        }
    </script>
